@page
@model RoskildeStudentHousing.Pages.SharedClass.DormitoryRoomsModel
@{
    ViewData["Title"] = "GetDormintoryRoom";
}


<h4 style="color:red">List of all Room in this Dormitory</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Dormitory Name
            </th>
            <th>
                Room Number
            </th>
            <th>
                Room Type
            </th>
            <th>
                Address
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.leasingRoomStudentDorms != null)
        {
            @foreach (var DormRoom in Model.leasingRoomStudentDorms)
            {
                <tr>
                    <td>
                        @DormRoom.DormName
                    </td>
                    <td>
                        @DormRoom.RoomId
                    </td>
                    <td>
                        @DormRoom.RoomType
                    </td>
                    <td>
                        @DormRoom.Address
                    </td>
                    <td>
                        @DormRoom.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

